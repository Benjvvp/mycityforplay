<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("partials/head") %>
    <script async src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5926464001789891"
        crossorigin="anonymous"></script>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-dark shadow">
        <div class="container-fluid">
            <div class="collapse navbar-collapse justify-content-center" id="navbarNavAltMarkup">
                <div class="navbar-nav fw-bold">
                    <a class="nav-link link-animation" href="/">Inicio</a>
                    <a class="nav-link link-animation" href="/about">Sobre Nosotros</a>
                    <a class="nav-link link-animation" href="/games">Juegos</a>
                </div>
            </div>
        </div>
    </nav>
    <div class="w-75 mx-auto mt-5 shadow">
        <%- include ("partials/messages") %>
        <h1 class="fw-bold text-center color-black"><%= game.name %></h1>
        <% if(game.mygame) {%>
        <img src="<%= game.img %>" class="img-fluid mx-auto w-50 d-block pt-2" alt="...">
        <% } else { %>
        <iframe src="<%= game.gamebox %>" width="960" role="application" allowtransparency="true"
            class="mx-auto d-flex justify-content-center" height="600" frameborder="no" scrolling="no"
            allow="autoplay; fullscreen; microphone" webkitallowfullscreen="true" mozallowfullscreen="true"
            msallowfullscreen="true" allowfullscreen="true"></iframe>
        <% }%>
        <div class="row g-0 border border-dark mt-5 mb-5">
            <div class="col-6 col-md-4 border-end p-3">
                <center>
                    <div class="stats">
                        <div class="views game-stats">
                            <i class="bi bi-eye"></i>
                            <span class="stat"><%= game.stats.views %></span>
                        </div>
                        <div class="star game-stats border-0">
                            <i class="bi bi-star"></i>
                            <span class="stat"><% if(isNaN(game.stats.stars/game.userscalification.length )) {%>
                                0
                                <% } else { %>
                                <%= game.stats.stars/game.userscalification.length %>
                                <% }%>
                            </span>
                        </div>
                    </div>
                    <hr>
                    <div class="stars d-inline-block align-middle mt-1">
                        <a href="/games/<%= game._id %>/calification/5" class="b1"><i class="bi bi-star-fill"></i></a>
                        <a href="/games/<%= game._id %>/calification/4" class="b2"><i class="bi bi-star-fill"></i></a>
                        <a href="/games/<%= game._id %>/calification/3" class="b3"><i class="bi bi-star-fill"></i></a>
                        <a href="/games/<%= game._id %>/calification/2" class="b4"><i class="bi bi-star-fill"></i></a>
                        <a href="/games/<%= game._id %>/calification/1" class="b5"><i class="bi bi-star-fill"></i></a>
                    </div>

                </center>
            </div>
            <div class="col-sm-6 col-md-8 p-3">
                <script async
                    src="https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=ca-pub-5926464001789891"
                    crossorigin="anonymous"></script>
                <!-- Seccion GAME -->
                <ins class="adsbygoogle" style="display:block" data-ad-client="ca-pub-5926464001789891"
                    data-ad-slot="3207659529" data-ad-format="auto" data-full-width-responsive="true"></ins>
                <script>
                    (adsbygoogle = window.adsbygoogle || []).push({});
                </script>
            </div>
        </div>
    </div>


    <!-- Boostrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous">
    </script>
    <%- include ('partials/scripts')  %>
</body>

</html>